
<div class="container center">
  <nav class="navbar navbar-default">
    <div class="container-fluid">
      <div class="navbar-header">
        <a class="navbar-brand" href="#" style="color:red">
          RedAlert | Fire Detection System
        </a>
      </div>
    </div>
  </nav>
<div>
  <div class="row">
  <div class="col-sm-4">
    <h4 id="alarm" style="color:#188b0f">Alarm Status: Off</h4>
  </div>
  <div class="col-sm-offset-7 col-sm-1" align="right">
  <a type="button" class="btn btn-info" href="device/dismiss">Dismiss</a>
  </div>
  </div>
<table class="table table-hover">
  <thead>
  <tr>
    <th>Room Name</th>
    <th>Sensor Alarm</th>
    <th>Button Alarm</th>

    <th>Temperature</th>
    <th>Device IP</th>
    <th>Device Status</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @devices.each do |device| %>
      <tr class="<%= device.status %>">
        <td><%= device.name %></td>
        <td><div style="display:none" class="<%= device.alarm_by_sensor %> fire"><span class="glyphicon glyphicon-fire" aria-hidden="true" style="font-size:15px;color:red" ></span></div></td>
        <td><div style="display:none" class="<%= device.alarm_by_button %> fire"><span class="glyphicon glyphicon-fire" aria-hidden="true" style="font-size:15px;color:red" ></span></div></td>

        <td><%= device.temp %>â„ƒ</td>
        <td><%= device.ip %></td>
        <td><%= device.status %></td>
        <td><%= link_to 'Edit', edit_device_path(device) %></td>
        <td><%= link_to "<span class='glyphicon glyphicon-remove' aria-hidden='true' style='font-size:15px;color:red'></span>".html_safe, device, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<br>
<script>
$( document ).ready(function() {
  $(".On").css('display','block');
  $(".Online").addClass("success");
  $(".Offline").addClass("danger");

  if ($(".fire").hasClass("On")) {
    $("#alarm").text("Alarm Status: On!!!");
    $("#alarm").css('color','red');
  }
});
</script>
  </div>
  </div>